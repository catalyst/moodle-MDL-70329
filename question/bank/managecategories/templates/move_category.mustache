{{!
    @template qbank_managecategories/move_category

    Modal to move a category.

    Example context (json):
    {
        "contexts": [
            {
                "contexid": 1,
                "category": [
                    {
                        "categoryname": "Default category for course 1",
                        "categoryid": 3
                    },
                    {
                        "categoryname": "Default category for course category 1",
                        "categoryid": 4
                    }
                ]
            },
            {
                "contexid": 3,
                "category": [
                    {
                        "categoryname": "Default category for course 2",
                        "categoryid": 5
                    },
                    {
                        "categoryname": "Default category for course category 2",
                        "categoryid": 6
                    }
                ]
            }
        ]
    }
}}
<div>
    {{#contexts}}
    <fieldset>
        <legend> {{{contextname}}}</legend>

        <ul class="unlist" data-for="categorylist" data-contextid="{{contextid}}">
            {{#categories}}
                {{^disabled}}
                    <li class="list_item d-flex" role="treeitem">
                        <a class="modal_category_item text-truncate" href="#" data-for="category" data-categoryid="{{id}}">
                            {{{name}}}
                        </a>
                    </li>
                {{/disabled}}
            {{/categories}}
        </ul>
    </fieldset>
    {{/contexts}}
</div>
