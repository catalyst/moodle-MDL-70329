{{!
    @template qbank_viewquestionname/questionname_display

    Example context (json):
    {
        "displaydata": [
          {
                "haslabel": false,
                "nameclasses": "class-name class-name",
                "namecontent": "Question name",
                "idnumber": "questionidnumber",
                "tags": "tags html",
                "labelfor": "labelkey"
          }
        ]
    }
}}

{{^haslabel}}
    <span class="d-inline-flex flex-nowrap overflow-hidden w-100">
        <span class="{{nameclasses}}">
            {{namecontent}}
        </span>
        <span class="ml-1">
            <span class="accesshide">{{#str}}idnumber, question{{/str}}</span>&nbsp<span class="badge badge-primary">{{idnumber}}</span>
        </span>
    </span>
    {{#tags}}
        <span class="d-inline-flex flex-nowrap overflow-hidden w-100">
            {{{tags}}}
        </span>
    {{/tags}}
{{/haslabel}}
{{#haslabel}}
    <label for="{{labelfor}}" class="d-inline-flex flex-nowrap overflow-hidden w-100">
        <span class="questionname flex-grow-1 flex-shrink-1 text-truncate">
            {{namecontent}}
        </span>
        <span class="ml-1">
            <span class="accesshide">{{#str}}idnumber, question{{/str}}</span><span class="badge badge-primary">{{idnumber}}</span>
        </span>
    </label>
    {{#tags}}
        <label for="{{labelfor}}" class="d-inline-flex flex-nowrap overflow-hidden w-100">
            {{{tags}}}
        </label>
    {{/tags}}
{{/haslabel}}
